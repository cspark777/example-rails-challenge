<table class="<%= type %>">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |charge| %>
      <tr>
        <td><%= charge.customer.name %></td>
        <td><%= display_amount(charge.amount, charge.currency_symbol) %></td>
        <td><%= Time.at(charge.created) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
